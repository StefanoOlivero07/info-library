<!DOCTYPE html>
<html lang="it">
<head>  
   <meta charset="utf-8" />  
   <title>Library - @ViewBag.Title</title>  

   <!-- Bootstrap css -->  
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet"   
   integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">  

   <!-- FontAwesome -->  
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">  

   <!-- AOS Animation css -->  
   <link href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" rel="stylesheet">  

   <!-- Bootstrap js -->  
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"  
   integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>  

   <!-- AOS Animation js -->  
   <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>  
   <script>  
       AOS.init();  
   </script>  
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-book"></i> Library</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Home">Home</a>
                    <a class="nav-link" asp-controller="Loan" asp-action="Index">Make loan</a>
                    <a class="nav-link" asp-controller="Booking" asp-action="Index">View booking</a>
                    <a class="nav-link" asp-controller="User" asp-action="Index">View users</a>
                </div>
            </div>
        </div>
    </nav>


    <div class="container">
        @RenderBody()
    </div>
</body>
</html>