@using Library.Core.Models;
@model Loan;

<h1 class="text-center text-danger">Loan not available</h1>
<h3 class="text-center">We are sorry, but this book is already loaned.</h3>

<p class="text-center">If you wish you can book it by compiling this form</p>
<form asp-controller="Booking" asp-action="Add" method="post" class="mt-3">
    <div class="mb-3">
        <label asp-for="UserId" class="form-label">User</label>
        <select asp-for="UserId" asp-items="ViewBag.SelectUser" class="form-select"></select>
    </div>
</form>