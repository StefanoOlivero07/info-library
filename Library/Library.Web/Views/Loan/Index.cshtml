@using Library.Core.Models;
@model User;

<link rel="stylesheet" href="@Url.Content("~/css/Loan/Index.css")" />
<script src="@Url.Content("~/js/Loan/Index.js")"></script>

<h1 class="text-center text-danger mt-3">Loan</h1>

<form asp-action="Loan" method="post" class="mt-3" data-aos="fade-down">
    <label class="form-label fw-bold">Select an user:</label>
    <select asp-for="Id" asp-items="ViewBag.UserSelect" class="form-select text-center"></select>

    <button type="submit" class="btn btn-success">View books</button>
</form>